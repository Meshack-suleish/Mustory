<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/vertical_gradient"
    tools:context=".WelcomeActivity">

    <!-- Title Text -->
    <TextView
        android:id="@+id/welcoming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Let's make your day shine with SDA hymns"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold" />

    <!-- Subtitle Text -->
    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="Listen, and explore the True Stories of your Favourite Music!"
        android:textColor="#eef56c"
        android:textSize="18sp"
        android:textStyle="italic" />

    <!-- Music Note Image -->
    <ImageView
        android:id="@+id/musicnote"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:src="@drawable/guiter" />

    <!-- Get Started Button -->
    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/cardview_dark_background"
        android:paddingHorizontal="32dp"
        android:paddingVertical="12dp"
        android:text="Get Started"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />


</LinearLayout>
